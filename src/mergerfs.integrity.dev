def build_branches_freespace(branches, caches):
    rv = dict()
    rc = dict()
    for branch in branches:
        st = os.statvfs(branch)
        if match(branch, caches):
            rc[branch] = st.f_bavail * st.f_frsize
        else:
            rv[branch] = st.f_bavail * st.f_frsize
    return (rv, rc)


